@model IEnumerable<RedeSocial.BLL.Models.Midia>

@{
    ViewData["Title"] = "Mídias";
}

<h1>Mídias</h1>

<p>
    <a asp-action="Criar">Postar Nova Mídia</a>
</p>

@{
    var numberOfColsNeeded = 3;
    var totalCounter = Model.Count();
    var itemCounter = 1;
}

@foreach (var midia in Model) {
    if (itemCounter % numberOfColsNeeded == 1)
    {
        @:<div class="row" >
    }
    <div class="col-sm-4">
        <div class="card">
            <img src="@midia.EnderecoBlob" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@midia.Titulo</h5>
                <p>@midia.NomeUsuario</p>
                @Html.ActionLink("Apagar", "Apagar", new { id=midia.Id }, new { @class="btn btn-danger"})

            </div>
        </div>
    </div>
    if ((itemCounter % numberOfColsNeeded == 0) || ((itemCounter) == totalCounter))
    {
        @:</div>
    }
    itemCounter++;
}